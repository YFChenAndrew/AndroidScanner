<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <Button
        android:layout_width="188dp"
        android:layout_height="188dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/folders"
        android:text="@string/scan_button"
        android:textSize="16sp"
        android:onClick="scanScreen"
        android:id="@+id/button" />
<Button android:layout_width="0dp" android:layout_height="0dp" android:id="@+id/button1"></Button>
    <Button
        android:layout_width="188dp"
        android:layout_height="188dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp"
        android:background="@drawable/trash"
        android:text="@string/trash_button"
        android:textSize="16sp"
        android:onClick="trashScreen"
        android:layout_weight="0.06" android:id="@+id/button2"/>
</LinearLayout>